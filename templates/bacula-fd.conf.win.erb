# Bacula File Daemon Configuration

# Configure the Director which will manage this host's backups
Director {
  Name = "<%= @director %>:dir"
  Password = "<%= @password %>"
}

<% if @monitor_pass -%>
# Restricted Director, used by tray-monitor to get the status of the file daemon
Director {
  Name = bacula-mon
  Password = "<%= @monitor_pass %>"
  Monitor = yes
}

<% end -%>
# Now configure the actual File Daemon
FileDaemon {
  Name = "<%= @myname %>:fd"
  FDPort = <%= @port %>
  Working Directory = "<%= scope['bacula::params::client_workdir'] %>"
  PID Directory = "<%= scope['bacula::params::client_pid_dir'] %>"
  Maximum Concurrent Jobs = 3
}

# Finally, set where the messages are going to go
Messages {
  Name = "standard"
  Director = "<%= @director %>:dir" = all, !skipped, !restored
}
